---
import lichtFeldLogo from '../assets/lichtfeld-logo.svg';
import core11Logo from '../assets/core11-logo.svg';
---

<div class="container">
  <footer class="py-3 my-4">
    <!-- Supported by section -->
    <div class="d-flex flex-column align-items-center mb-3 pb-3 border-bottom">
      <p class="text-body-secondary mb-2 small">Supported by</p>
      <a
        href="https://www.core11.eu/"
        target="_blank"
        rel="noopener noreferrer"
        aria-label="Visit Core11 website"
        class="sponsor-logo"
      >
        <img src={core11Logo.src} alt="Core11" style="height: 32px; opacity: 0.85;" />
      </a>
    </div>

    <!-- Footer content -->
    <div class="d-flex flex-wrap justify-content-between align-items-center">
      <p class="col-md-4 mb-0 text-body-secondary">Â© 2025 LichtFeld</p>
      <a href="#" class="col-md-4 d-flex align-items-center justify-content-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none" aria-label="LichtFeld Studio Home">
        <img src={lichtFeldLogo.src} alt="LichtFeld Studio" style="height: 20px" />
      </a>
    </div>
  </footer>
</div>

<style>
  .sponsor-logo {
    transition: opacity 0.2s ease;
  }

  .sponsor-logo:hover {
    opacity: 1 !important;
  }
</style>