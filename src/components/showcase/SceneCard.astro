---
/**
 * Scene selection card for the Showcase page.
 *
 * Displays a preview image and metadata for a 3D Gaussian Splat scene.
 * When clicked, the scene is loaded into the viewer.
 *
 * Uses a data-scene-id attribute for client-side scene switching.
 *
 * @module components/showcase/SceneCard
 */
import type { SceneConfig } from '@/constants/scenes';

interface Props {
  /**
   * Scene configuration from the registry.
   */
  scene: SceneConfig;

  /**
   * Whether this scene is currently selected.
   */
  isSelected?: boolean;

  /**
   * Base path for asset URLs.
   */
  basePath?: string;
}

const { scene, isSelected = false, basePath = '' } = Astro.props;

/**
 * Construct the preview image URL.
 * Falls back to a placeholder if no preview is defined.
 */
const previewImagePath = scene.previewImage
  ? `${basePath}static/${scene.folderName}/${scene.previewImage}`
  : `${basePath}static/${scene.folderName}/preview.webp`;
---

<button
  class:list={['scene-card', { 'scene-card--selected': isSelected }]}
  data-scene-id={scene.id}
  data-scene-folder={scene.folderName}
  type="button"
  aria-pressed={isSelected}
  aria-label={`Select ${scene.name} scene`}
>
  <!-- Preview image container -->
  <div class="scene-card__image-container">
    <img
      src={previewImagePath}
      alt={`Preview of ${scene.name}`}
      class="scene-card__image"
      loading="lazy"
    />

    <!-- Selection indicator overlay (eye = currently visible) -->
    <div class="scene-card__selected-indicator" aria-hidden="true">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" width="20" height="20">
        <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z" />
        <circle cx="12" cy="12" r="3" />
      </svg>
    </div>
  </div>

  <!-- Scene metadata -->
  <div class="scene-card__body">
    <h3 class="scene-card__title">{scene.name}</h3>
    <p class="scene-card__description">{scene.description}</p>

    {
      scene.attribution && (
        <span class="scene-card__attribution">Source: {scene.attribution}</span>
      )
    }
  </div>
</button>

<style>
  /**
   * Scene card styling with interactive states.
   * Uses CSS custom properties for theming consistency.
   */
  .scene-card {
    position: relative;
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100%;
    padding: 0;
    background-color: #fff;
    border: 2px solid var(--border-color, #e5e7eb);
    border-radius: var(--border-radius, 0.5rem);
    box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    cursor: pointer;
    overflow: hidden;
    text-align: left;
    font-family: inherit;
    transition:
      box-shadow 0.2s ease-in-out,
      transform 0.2s ease-in-out,
      border-color 0.2s ease-in-out;
  }

  /* Hover state - elevate the card */
  .scene-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
    border-color: var(--color-primary, #0066cc);
  }

  /* Focus state for keyboard navigation */
  .scene-card:focus {
    outline: none;
    border-color: var(--color-primary, #0066cc);
    box-shadow:
      0 0 0 3px rgba(0, 102, 204, 0.25),
      0 0.5rem 1rem rgba(0, 0, 0, 0.15);
  }

  /* Selected state */
  .scene-card--selected {
    border-color: var(--color-primary, #0066cc);
    box-shadow: 0 0 0 2px var(--color-primary, #0066cc);
  }

  .scene-card--selected:hover {
    border-color: var(--color-primary, #0066cc);
  }

  /* Image container with aspect ratio */
  .scene-card__image-container {
    position: relative;
    width: 100%;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    background-color: var(--body-background, #f8f9fa);
  }

  .scene-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  /* Subtle zoom on hover */
  .scene-card:hover .scene-card__image {
    transform: scale(1.05);
  }

  /* Selection indicator (eye icon = currently visible) */
  .scene-card__selected-indicator {
    position: absolute;
    top: 0.5rem;
    right: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2rem;
    height: 2rem;
    background-color: var(--color-primary, #0066cc);
    border-radius: 50%;
    color: white;
    opacity: 0;
    transform: scale(0.8);
    transition:
      opacity 0.2s ease-in-out,
      transform 0.2s ease-in-out;
  }

  .scene-card--selected .scene-card__selected-indicator {
    opacity: 1;
    transform: scale(1);
  }

  /* Card body with text content */
  .scene-card__body {
    padding: 1rem;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .scene-card__title {
    margin: 0 0 0.5rem;
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-text, #1f2937);
  }

  .scene-card__description {
    margin: 0;
    font-size: 0.875rem;
    color: #6c757d;
    line-height: 1.5;
    flex-grow: 1;
  }

  .scene-card__attribution {
    display: block;
    margin-top: 0.5rem;
    font-size: 0.75rem;
    color: #9ca3af;
  }
</style>
