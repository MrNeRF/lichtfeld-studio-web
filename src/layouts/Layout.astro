---
import Footer from "@/components/Footer.astro";
import Header from "@/components/Header.astro";

// Let Vite/Astro handle asset rebasing (iconsâ€™ font URLs)
import "bootstrap-icons/font/bootstrap-icons.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no, maximum-scale=1" />
    <link rel="icon" type="image/svg+xml" href={import.meta.env.BASE_URL + "static/favicon.svg"} />
    <title>LichtFeld Studio</title>
    <style lang="scss" is:global>
      @use "bootstrap/scss/bootstrap" as *;
      @import "../styles/theme.css";

      body {
        background-color: var(--body-background);
      }

      main {
        padding-top: var(--nav-height); /* Offset content to account for the fixed header */
      }
    </style>
  </head>
  <body>
    <main>
      <!-- Header -->
      <Header />

      <!-- Content -->
      <slot />

      <!-- Footer -->
      <Footer />
    </main>
  </body>
</html>
